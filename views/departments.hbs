<div class="row">
    <div class="col-md-12">
        <h2>
            Departments
            <a href="/departments/add" class="btn btn-success pull-right">Add New Department</a>
        </h2>
        <hr>
        {{#if arr}}
            <table class="table table-responsive">
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                </tr>
                {{#each arr}}
                    <tr>
                        <td>
                            <a href="/employees?department={{this.departmentId}}">{{this.departmentId}}</a>
                        </td>
                        <td>
                            <a href="/department/{{departmentId}}">{{departmentName}}</a>
                        </td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/if}}
    </div>
</div>