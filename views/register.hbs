{{#if errorMessage}}
    <div class="alert alert-danger"> 
        <strong>Error:</strong> {{errorMessage}}
    </div>
{{/if}}
{{#unless successMessage}}
<h2>Register</h2>
<hr>
<form method="post" action="/register">
<div class="form-group">
    <input type="text" required name="name" value="{{#if userName}}{{userName}}{{/if}}" class="form-control" placeholder="User name">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="password" required placeholder="Password">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="password2" required placeholder="Confirm Password">
  </div>
  <div class="form-group">
    <input type="email" required name="email" class="form-control" placeholder="Email Address">
  </div>
  <div class="form-group text-right">
    <button type="submit" class="btn btn-success">Register</button>
  </div>
</form>
{{else}}
<div class="alert alert-success">
<strong>Success:</strong> {{successMessage}}</div><a class="btn btn-success pull-right"
href="/login">&nbsp;&nbsp;&nbsp;Proceed to Log in &nbsp;&nbsp;&nbsp;</a><br /><br /><br />
{{/unless}}